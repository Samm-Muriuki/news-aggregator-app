{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
